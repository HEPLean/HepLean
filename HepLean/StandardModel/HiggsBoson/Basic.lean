@[simp]
lemma ofReal_normSq {a : ‚Ñù} (ha : 0 ‚â§ a) : ‚ÄñofReal a‚Äñ ^ 2 = a := by
  simp only [ofReal]
  rw [PiLp.norm_sq_eq_of_L2]
