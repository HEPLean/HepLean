/-- Time ordering is total. -/
instance : IsTotal ğ“•.States ğ“•.timeOrderProp where
  total a b := by
    cases a <;> cases b <;> simp [timeOrderProp]
    exact LinearOrder.le_total _ _

/-- Time ordering is transitive. -/
