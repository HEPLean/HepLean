    simp

lemma coContrContraction_hom_tmul (œÜ : complexCo) (œà : complexContr) :
    coContrContraction.hom (œÜ ‚äó‚Çú œà) = œÜ.toFin13‚ÑÇ ‚¨ù·µ• œà.toFin13‚ÑÇ := by
